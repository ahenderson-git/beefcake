{
  "version": "0.1",
  "name": "simple_clean",
  "input": {
    "format": "csv",
    "has_header": true,
    "delimiter": ",",
    "encoding": "utf-8"
  },
  "schema": {
    "match_mode": "tolerant",
    "required_columns": []
  },
  "steps": [
    {
      "op": "trim_whitespace",
      "columns": [
        "name",
        "email",
        "city"
      ]
    },
    {
      "op": "regex_replace",
      "columns": [
        "phone"
      ],
      "pattern": "[^0-9]",
      "replacement": ""
    }
  ],
  "output": {
    "format": "parquet",
    "path_template": "output/simple_cleaned.parquet",
    "overwrite": true
  }
}
